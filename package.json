{
  "name": "@karoshibee/re-tree",
  "version": "0.1.0",
  "description": "A parent/child tree inspired by Atlassian ToolKit Tree",
  "scripts": {
    "build:bs": "BS_LOG=off bsb -clean-world -make-world",
    "build:bs:dev": "BS_LOG=*,re-tree=* bsb -clean-world -make-world",
    "watch:bs": "BS_LOG=*,re-tree=* bsb -clean-world -make-world -w",
    "watch:jest": "jest --coverage --watchAll",
    "clean": "yarn run clean:bs && yarn run clean:dist",
    "clean:bs": "bsb -clean-world",
    "clean:dist": "rm -rf dist",
    "coverage": "nyc report --temp-directory=coverage --reporter=text-lcov | coveralls",
    "test": "yarn run build:bs:dev && jest --coverage",
    "fastcheck": "./node_modules/.bin/mocha __tests__/*fastcheck.bs.js --watch"
  },
  "keywords": [
    "BuckleScript"
  ],
  "private": false,
  "author": "simon.parry@karoshibee.com",
  "license": "MIT",
  "files": [
    "src/",
    "bsconfig.json"
  ],
  "dependencies": {
    "@glennsl/bs-json": "^5.0.2",
    "bs-log": "^1.1.0"
  },
  "devDependencies": {
    "@glennsl/bs-jest": "^0.4.9",
    "bs-fast-check": "https://github.com/TheSpyder/bs-fast-check.git",
    "bs-mocha": "^1.0.0",
    "bs-platform": "^7.0.1",
    "coveralls": "^3.0.9",
    "nyc": "^15.0.0"
  },
  "jest": {
    "transformIgnorePatterns": [
      "/node_modules/(?!@glennsl/bs-jest|bs-platform|bs-log|@glennsl/bs-json).+\\.js$"
    ]
  }
}
